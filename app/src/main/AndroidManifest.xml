<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.futusteps">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="br.com.futusteps.survey.SurveyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="br.com.futusteps.survey.ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.futusteps.survey.MainActivity"
            android:label="@string/title_activity_survey"
            android:theme="@style/ThemeBarBackground" />
        <activity
            android:name="br.com.futusteps.survey.ui.questions.QuestionsActivity"
            android:label="@string/title_activity_survey" />
    </application>

</manifest>